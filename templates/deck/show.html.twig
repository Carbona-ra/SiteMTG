{% extends 'base.html.twig' %}

{% block title %}Deck{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-900 text-white">
    <div class="container mx-auto py-8 px-4">
        <h1 class="text-4xl font-bold text-red-500 mb-8">Deck</h1>

        <div class="flex">
            <!-- Commander Section -->
            <div class="w-1/4">
                <div class="bg-gray-800 rounded-lg p-4 shadow-lg">
                    <h2 class="text-2xl font-bold mb-4">Commander</h2>
                    <div class="aspect-w-3 aspect-h-4 bg-gray-700 rounded-lg mb-4 overflow-hidden">
                        <!-- Image Placeholder -->
                        <img src="/path/to/commander-image.jpg" alt="{{ deck.commanderName }}" class="object-cover w-full h-full">
                    </div>
                    <h3 class="text-lg font-semibold">{{ deck.commanderName }}</h3>
                </div>
            </div>

            <!-- Deck Info and Cards Section -->
            <div class="w-3/4 pl-8">
                <div class="bg-gray-800 rounded-lg p-6 shadow-lg mb-8">
                    <h2 class="text-2xl font-bold text-red-500 mb-4">Deck Information</h2>
                    <table class="w-full text-left">
                        <tbody>
                            <tr>
                                <th class="py-2 px-4">Id</th>
                                <td class="py-2 px-4">{{ deck.id }}</td>
                            </tr>
                            <tr>
                                <th class="py-2 px-4">Name</th>
                                <td class="py-2 px-4">{{ deck.name }}</td>
                            </tr>
                            <tr>
                                <th class="py-2 px-4">Image Name</th>
                                <td class="py-2 px-4">{{ deck.imageName }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                {% if isOwner %}
                    <h3 class="text-xl font-bold text-red-500 mt-6">Add a Card</h3>
                    <form id="add-card-form" class="mt-4 flex">
                        <input type="hidden" name="deck_id" value="{{ deck.id }}">
                        <input type="text" id="card_name" name="card_name" required
                            class="flex-grow bg-gray-700 text-white rounded-lg p-2 mr-2 focus:ring-2 focus:ring-red-500 focus:outline-none"
                            placeholder="Enter card name">
                        <button type="submit"
                                class="bg-red-500 text-white rounded-lg px-4 py-2 hover:bg-red-700 transition-colors">
                            Add Card
                        </button>
                    </form>
                {% endif %}

                <div class="bg-gray-800 rounded-lg p-6 shadow-lg">
                    <h2 class="text-2xl font-bold text-red-500 mb-4">Cards</h2>
                    <ul id="card-list" class="space-y-2">
                        {% for card in cards %}
                            <li class="bg-gray-700 rounded-lg px-4 py-2 flex justify-between items-center">
                                {{ card.name }}
                                {% if isOwner %}
                                    <button data-card-id="{{ card.id }}" class="remove-card-btn text-red-500 hover:text-red-700">
                                        Remove
                                    </button>
                                {% endif %}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="mt-8">
            <a href="{{ path('app_deck_index') }}" class="text-red-500 hover:underline">Back to list</a>
            {% if isOwner %}
                <a href="{{ path('app_deck_edit', {'id': deck.id}) }}" class="ml-4 text-red-500 hover:underline">Edit</a>
                {{ include('deck/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
</div>

{% if isOwner %}
    <script>
        document.getElementById('add-card-form').addEventListener('submit', function(event) {
            event.preventDefault();
            
            const formData = new FormData(this);
            
            fetch('{{ path('app_card_add') }}', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    const cardList = document.getElementById('card-list');
                    const newCard = document.createElement('li');
                    newCard.classList.add('bg-gray-700', 'rounded-lg', 'px-4', 'py-2', 'flex', 'justify-between', 'items-center');
                    newCard.textContent = formData.get('card_name') + ' ';
                    const removeBtn = document.createElement('button');
                    removeBtn.textContent = 'Remove';
                    removeBtn.setAttribute('data-card-id', data.card_id);
                    removeBtn.classList.add('remove-card-btn', 'text-red-500', 'hover:text-red-700');
                    newCard.appendChild(removeBtn);
                    cardList.appendChild(newCard);
                }
            });
        });

        document.querySelectorAll('.remove-card-btn').forEach(button => {
            button.addEventListener('click', function() {
                const cardId = this.getAttribute('data-card-id');
                
                fetch('{{ path('app_card_remove') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ deck_id: {{ deck.id }}, card_id: cardId }),
                })
                .then(response => response.json())
                .then(data => {
                    if (data.status === 'success') {
                        this.parentElement.remove();
                    }
                });
            });
        });
    </script>
{% endif %}
{% endblock %}

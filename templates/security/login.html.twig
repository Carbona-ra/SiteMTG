{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecter en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Ce déconecter</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Connecter vous</h1>
        <label for="username">Nom</label>
        <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
        <label for="password">Mots de passe</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Ce souvenir de moi</label>
            </div>
       

        <button class="btn btn-lg btn-primary" type="submit">
            Ce connecter
        </button>
        <a href="{{ path('app_register') }}">Pour crée un compte</a>
    </form>
{% endblock %}